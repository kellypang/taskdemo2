<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Enhanced logging configuration for comprehensive exception capture -->
    
    <!-- Console appender with full exception stack traces -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z', UTC} %-5level [%thread] %logger{50} - %msg%n%ex{full}</pattern>
        </encoder>
    </appender>
    
    <!-- File appender for e2e testing with full exception details -->
    <springProfile name="e2e,devdb">
        <appender name="FILE" class="ch.qos.logback.core.FileAppender">
            <file>../test-logs/backend-detailed.log</file>
            <encoder>
                <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z', UTC} %-5level [%thread] %logger{50} - %msg%n%ex{full}</pattern>
                <immediateFlush>true</immediateFlush>
            </encoder>
        </appender>
        
        <!-- Log all exceptions and errors to file -->
        <logger name="uk.gov.hmcts" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </logger>
        
        <!-- Capture Spring Framework exceptions -->
        <logger name="org.springframework.web" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </logger>
        
        <!-- Capture all unhandled exceptions -->
        <logger name="org.springframework.boot.autoconfigure.web.servlet.error.ErrorMvcAutoConfiguration" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </logger>
    </springProfile>
    
    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <springProfile name="e2e,devdb">
            <appender-ref ref="FILE"/>
        </springProfile>
    </root>
</configuration>